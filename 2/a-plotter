#include<stdio.h>
#include<stdlib.h>
int search(int *ar,int n,int key)
{
	int cnt=0;
	for(int i=0;i<n;i++)
	{
		cnt++;
		if(ar[i]==key)
		{
			printf("Element found!!Position of the element is %d\n",(i+1));
			return cnt;
		}
	}
	printf("Element %d not found\n",key);
	return cnt;
}

int main()
{
  int key,i;
	FILE *fp1,*fp2;
	fp1=fopen("linearbest.txt","a");
	fp2=fopen("linearworst.txt","a");
	int *ar;
	for(int n=10;n<=100;n+=10)
	{
		ar=(int*)malloc(sizeof(int)*n);
		for(i=0;i<n;i++)
		ar[i]=i;
		//BEST CASE
		key=ar[0];
		fprintf(fp1,"%d %d\n",n,search(ar,n,key));
		//WORST CASE
		key=ar[n-1];
		fprintf(fp2,"%d %d\n",n,search(ar,n,key));
	}
	fclose(fp1);
	fclose(fp2);
	//system("gnuplot>load 'command_ls.txt'");
}
